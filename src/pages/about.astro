---
import Form from '~/components/ui/Form.astro';
import Hero from '~/components/widgets/Hero.astro';
import Timeline from '~/components/ui/Timeline.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Me',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Me"
    image={{
      src: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Author Image',
    }}
  >
    <Fragment slot="title">
      Hi, I'm <span class="text-accent dark:text-white">John Doe</span>, a passionate software engineer
    </Fragment>

    <Fragment slot="subtitle">
      I specialize in full-stack development, with a focus on creating scalable web applications and sharing knowledge through my blog.
    </Fragment>
  </Hero>

  <!-- Bio Section -->
  <section class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">About Me</h2>
        <p class="text-lg leading-relaxed mb-6">
          I'm a seasoned software engineer with over 8 years of experience in web development. My journey started with a curiosity for how websites work, which led me to pursue a career in technology. I love building efficient, user-friendly applications and sharing my knowledge through writing.
        </p>
        <p class="text-lg leading-relaxed">
          When I'm not coding, you can find me exploring new technologies, contributing to open-source projects, or writing about my latest discoveries on this blog.
        </p>
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">Skills</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-xl font-semibold mb-4">Frontend</h3>
            <div class="space-y-4">
              <div>
                <div class="flex justify-between mb-1">
                  <span>React</span>
                  <span>90%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100">
                  <div class="bg-accent h-2.5 rounded-full" style="width: 90%"></div>
                </div>
              </div>
              <div>
                <div class="flex justify-between mb-1">
                  <span>JavaScript</span>
                  <span>95%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
                  <div class="bg-accent h-2.5 rounded-full" style="width: 95%"></div>
                </div>
              </div>
              <div>
                <div class="flex justify-between mb-1">
                  <span>HTML/CSS</span>
                  <span>95%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
                  <div class="bg-accent h-2.5 rounded-full" style="width: 95%"></div>
                </div>
              </div>
            </div>
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-4">Backend</h3>
            <div class="space-y-4">
              <div>
                <div class="flex justify-between mb-1">
                  <span>Node.js</span>
                  <span>85%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
                  <div class="bg-accent h-2.5 rounded-full" style="width: 85%"></div>
                </div>
              </div>
              <div>
                <div class="flex justify-between mb-1">
                  <span>Python</span>
                  <span>80%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
                  <div class="bg-accent h-2.5 rounded-full" style="width: 80%"></div>
                </div>
              </div>
              <div>
                <div class="flex justify-between mb-1">
                  <span>SQL</span>
                  <span>75%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
                  <div class="bg-accent h-2.5 rounded-full" style="width: 75%"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Experience Section -->
  <Timeline
    title="Experience"
    items={[
      {
        title: 'Senior Software Engineer',
        description: 'Led development of scalable web applications using React and Node.js. Mentored junior developers and implemented best practices.',
        date: '2020 - Present',
      },
      {
        title: 'Full Stack Developer',
        description: 'Developed and maintained multiple client projects using modern web technologies. Improved performance by 40%.',
        date: '2018 - 2020',
      },
      {
        title: 'Junior Developer',
        description: 'Started career building responsive websites and learning backend technologies. Contributed to open-source projects.',
        date: '2016 - 2018',
      },
    ]}
  />

  <!-- Certifications Section -->
  <section class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">Certifications</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-2">AWS Certified Solutions Architect</h3>
            <p class="text-gray-600 dark:text-gray-400">Amazon Web Services</p>
            <p class="text-sm mt-2">Issued: 2022</p>
          </div>
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-2">Google Cloud Professional Developer</h3>
            <p class="text-gray-600 dark:text-gray-400">Google Cloud</p>
            <p class="text-sm mt-2">Issued: 2021</p>
          </div>
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-2">Certified Scrum Master</h3>
            <p class="text-gray-600 dark:text-gray-400">Scrum Alliance</p>
            <p class="text-sm mt-2">Issued: 2020</p>
          </div>
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-2">React Developer Certification</h3>
            <p class="text-gray-600 dark:text-gray-400">Meta</p>
            <p class="text-sm mt-2">Issued: 2019</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">Get In Touch</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-xl font-semibold mb-4">Contact Information</h3>
            <p class="mb-4">Feel free to reach out for collaborations, questions, or just to say hello!</p>
            <div class="space-y-2">
              <p><strong>Email:</strong> john.doe@example.com</p>
              <p><strong>Location:</strong> San Francisco, CA</p>
            </div>
            <div class="mt-6">
              <h4 class="font-semibold mb-2">Follow Me</h4>
              <div class="flex space-x-4">
                <a href="https://github.com/johndoe" class="text-gray-600 hover:text-accent dark:text-gray-400 dark:hover:text-white">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                </a>
                <a href="https://linkedin.com/in/johndoe" class="text-gray-600 hover:text-accent dark:text-gray-400 dark:hover:text-white">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                </a>
              </div>
            </div>
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-4">Send a Message</h3>
            <Form
              inputs={[
                { type: 'text', name: 'name', label: 'Name', placeholder: 'Your Name' },
                { type: 'email', name: 'email', label: 'Email', placeholder: 'your@email.com' },
              ]}
              textarea={{ label: 'Message', name: 'message', placeholder: 'Your message here...' }}
              button="Send Message"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>