---
// Blog Homepage
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import BlogHighlightedPosts from '~/components/widgets/BlogHighlightedPosts.astro';
import BlogRecommendedPosts from '~/components/widgets/BlogRecommendedPosts.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import NewsletterSignup from '~/components/common/NewsletterSignup.astro';

const metadata = {
  title: 'Blog Home',
  description: 'Welcome to our blog',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Banner -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Read Latest Posts',
        href: '#latest-posts',
      },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Blog Hero Image' }}
  >
    <Fragment slot="title">
      Welcome to Our Blog
    </Fragment>

    <Fragment slot="subtitle">
      Discover insightful articles, stories, and thoughts on various topics.
    </Fragment>
  </Hero>

  <!-- Featured Posts -->
  <section class="py-8 sm:py-16 lg:py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">Featured Posts</h2>
      <BlogHighlightedPosts
        title=""
        linkText="View All Posts"
        linkUrl="/blog"
        postIds={[]}
      />
    </div>
  </section>

  <!-- Trending Posts -->
  <section class="py-8 sm:py-16 lg:py-20 bg-gray-100 dark:bg-gray-800">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">Trending Now</h2>
      <BlogLatestPosts
        title=""
        information="Popular posts based on recent activity"
        count={6}
  <!-- Recommended for You -->
  <section class="py-8 sm:py-16 lg:py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">Recommended for You</h2>
      <BlogRecommendedPosts
        title=""
        information="Personalized recommendations based on your interests"
        count={6}
      />
    </div>
  </section>
      />
    </div>
  </section>

  <!-- Latest Posts and Sidebar -->
  <section id="latest-posts" class="py-8 sm:py-16 lg:py-20 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <h2 class="text-3xl font-bold mb-8">Latest Posts</h2>
          <BlogLatestPosts
            title=""
            information="Stay updated with our latest articles"
          />
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="sticky top-8">
            <!-- Categories -->
            <div class="mb-8">
              <h3 class="text-xl font-semibold mb-4">Categories</h3>
              <ul class="space-y-2">
                <li><a href="/category/tech" class="text-primary hover:underline">Technology</a></li>
                <li><a href="/category/lifestyle" class="text-primary hover:underline">Lifestyle</a></li>
                <li><a href="/category/travel" class="text-primary hover:underline">Travel</a></li>
              </ul>
            </div>

            <!-- Newsletter Signup -->
            <NewsletterSignup
              title="Stay Updated"
              description="Subscribe to get the latest posts in your inbox."
            />
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>