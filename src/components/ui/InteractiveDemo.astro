---
// InteractiveDemo.astro - Component for embedding interactive code demos
interface Props {
  type: 'codepen' | 'jsfiddle' | 'codesandbox' | 'stackblitz';
  id?: string;
  url?: string;
  title?: string;
  height?: string;
  theme?: 'light' | 'dark';
}

const { type, id, url, title = 'Interactive Demo', height = '400px', theme = 'dark' } = Astro.props;

console.log('InteractiveDemo processing', { type, id, title });

let embedUrl = '';
let embedCode = '';

if (type === 'codepen' && id) {
  embedUrl = `https://codepen.io/embed/${id}?height=400&theme-id=${theme === 'dark' ? 'dark' : 'light'}&default-tab=js,result`;
  embedCode = `
    <iframe
      height="${height.replace('px', '')}"
      style="width: 100%;"
      scrolling="no"
      title="${title}"
      src="${embedUrl}"
      frameborder="no"
      loading="lazy"
      allowtransparency="true"
      allowfullscreen="true"
    >
      See the Pen <a href="https://codepen.io/${id.split('/')[0]}/pen/${id.split('/')[1]}">${title}</a> by ${id.split('/')[0]} (<a href="https://codepen.io/${id.split('/')[0]}">@${id.split('/')[0]}</a>) on <a href="https://codepen.io">CodePen</a>.
    </iframe>
  `;
} else if (type === 'jsfiddle' && id) {
  embedUrl = `https://jsfiddle.net/${id}/embedded/js,html,css,result/${theme === 'dark' ? 'dark' : 'light'}/`;
  embedCode = `
    <iframe
      width="100%"
      height="${height.replace('px', '')}"
      src="${embedUrl}"
      allowfullscreen="allowfullscreen"
      allowpaymentrequest
      frameborder="0"
      title="${title}"
    ></iframe>
  `;
} else if (type === 'codesandbox' && id) {
  embedUrl = `https://codesandbox.io/embed/${id}?fontsize=14&hidenavigation=1&theme=${theme}`;
  embedCode = `
    <iframe
      src="${embedUrl}"
      style="width:100%; height:${height}; border:0; border-radius: 4px; overflow:hidden;"
      title="${title}"
      allow="accelerometer; ambient-light-sensor; camera; encrypted-media; geolocation; gyroscope; hid; microphone; midi; payment; usb; vr; xr-spatial-tracking"
      sandbox="allow-forms allow-modals allow-popups allow-presentation allow-same-origin allow-scripts"
    ></iframe>
  `;
} else if (type === 'stackblitz' && id) {
  embedUrl = `https://stackblitz.com/edit/${id}?embed=1&theme=${theme}`;
  embedCode = `
    <iframe
      src="${embedUrl}"
      width="100%"
      height="${height.replace('px', '')}"
      frameborder="0"
      title="${title}"
    ></iframe>
  `;
} else if (url) {
  // Generic iframe for custom URLs
  embedCode = `
    <iframe
      src="${url}"
      width="100%"
      height="${height.replace('px', '')}"
      frameborder="0"
      title="${title}"
      allowfullscreen
    ></iframe>
  `;
}
---

<div class="interactive-demo my-6">
  <div class="demo-header bg-gray-100 dark:bg-gray-800 px-4 py-2 rounded-t-lg border border-gray-200 dark:border-gray-700">
    <div class="flex items-center justify-between">
      <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300">{title}</h3>
      <div class="flex items-center space-x-2">
        <span class="text-xs text-gray-500 dark:text-gray-400 capitalize">{type}</span>
        <button
          class="external-link-btn text-xs text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 underline"
          data-url="${type === 'codepen' && id ? `https://codepen.io/${id.split('/')[0]}/pen/${id.split('/')[1]}` : type === 'jsfiddle' && id ? `https://jsfiddle.net/${id}` : type === 'codesandbox' && id ? `https://codesandbox.io/s/${id}` : type === 'stackblitz' && id ? `https://stackblitz.com/edit/${id}` : url}"
          aria-label="Open in new tab"
        >
          <svg class="w-3 h-3 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div class="demo-content border-x border-b border-gray-200 dark:border-gray-700 rounded-b-lg overflow-hidden">
    {embedCode && (
      <div set:html={embedCode} />
    )}

    {!embedCode && (
      <div class="flex items-center justify-center h-32 bg-gray-50 dark:bg-gray-900 text-gray-500 dark:text-gray-400">
        <div class="text-center">
          <svg class="w-8 h-8 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
          <p class="text-sm">Invalid {type} configuration</p>
        </div>
      </div>
    )}
  </div>
</div>

<style>
  .interactive-demo iframe {
    border-radius: 0;
  }

  .external-link-btn {
    transition: color 0.2s ease;
  }

  .external-link-btn:hover {
    opacity: 0.8;
  }
</style>

<script>
  // Handle external link clicks
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.external-link-btn').forEach(button => {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        const url = button.getAttribute('data-url');
        if (url) {
          window.open(url, '_blank', 'noopener,noreferrer');
        }
      });
    });
  });
</script>